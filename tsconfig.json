{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["esnext"],
    "module": "commonjs",
    "outDir": "dist",
    "target": "esnext",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts"],
  "ts-node": {
    "transpileOnly": true
  }
}
